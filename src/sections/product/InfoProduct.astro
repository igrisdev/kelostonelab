---
import sanitizeHtml from 'sanitize-html'

const { descriptionHtml = 'Sin descripci√≥n' } = Astro.props

const sanitizedHtml = sanitizeHtml(descriptionHtml, {
  allowedTags: sanitizeHtml.defaults.allowedTags.concat(['img']),
  allowedAttributes: {
    ...sanitizeHtml.defaults.allowedAttributes,
    img: ['src', 'alt', 'style'],
  },
})
---

<section class='mt-6 flex flex-col md:flex-row gap-4'>
  <div class='md:border-r flex gap-4 md:gap-0 md:flex-col max-w-[150px] w-full'>
    <button class='border p-2 md:p-0 md:border-l-0 border-r-2 h-10'
      >Description</button
    >
    <button class='h-10'>Reviews</button>
  </div>

  <div class='flex-1'>
    <!-- <div set:html={sanitizedHtml} /> -->
    <div set:html={descriptionHtml} />

    <div class='hidden'>
      <form action=''>
        <div class='flex gap-2'>
          <input type='text' placeholder='Buscar...' />
          <button class='btn btn-primary'>Buscar</button>
        </div>
      </form>
    </div>
  </div>
</section>
